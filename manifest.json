{
  "manifest_version": 3,
  "name": "PlayStation easy platinum trophies",
  "description": "A collection of easy and quick (< 1h) obtainable PlayStation platinum trophies. It is updated daily.",
  "version": "0.0.0.1",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "PlayStation easy platinums",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"]
}
